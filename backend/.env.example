# Configuration de la base de données MySQL
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://root:password@localhost:3306/bee_apic_db"

# Port du serveur (optionnel, défaut: 3001)
PORT=3001

# Environment
NODE_ENV=development

# JWT Secret pour l'authentification (CHANGEZ EN PRODUCTION!)
JWT_SECRET="votre-secret-jwt-ultra-securise"
JWT_EXPIRES_IN="7d"

# Configuration API BeePerf (pour le proxy vers l'API externe)
BEEPERF_API_URL="https://web.beeperf.com/api"
BEEPERF_API_KEY="votre_clé_api_ici"

